<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <title>Admin Dashboard - Estate Shares</title>
  <style>
    body {
      background-color: blanchedalmond;
      background-size: cover;
      background-attachment: fixed;
    }
    .navbar {
      background-color: #dc3545 !important;
    }
    .property-card {
      margin-bottom: 20px;
    }
    .card-body {
      display: flex;
      justify-content: space-between;
      align-items: center;
    }
    img {
      height: 200px;
      width: 100px;
    }

  </style>
</head>
<body>
  <nav class="navbar navbar-expand-sm navbar-dark sticky-top">
    <div class="container-fluid">
      <a class="navbar-brand" href="/">Estate Shares</a>
      <div class="collapse navbar-collapse" id="collapsibleNavbar">
        <ul class="navbar-nav">
          <li class="nav-item">
            <a class="nav-link" href="/logout">Logout</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="staff/create">Create Property</a>
          </li>
        </ul>
      </div>
    </div>
  </nav>

  <div class="container mt-4">
    <h2 class="text-center">Properties</h2>
    <div class="row">
      <% properties.forEach(property => { %>
        <div class="col-md-4">
          <div class="card property-card">
            <img src="/image/<%= property.property_id %>" class="card-img-top" alt="Property Image">
            <div class="card-body">
              <h5 class="card-title"><%= property.property_type %></h5>
              <p class="card-text"><%= property.location %></p>
              <p class="card-text">Price: <%= property.price %></p>
              <a href="/staff/edit/<%= property.property_id %>" class="btn btn-primary">Edit</a>
              <form action="/staff/delete/<%= property.property_id %>" method="POST" style="display: inline;">
                <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this property?')">Delete</button>
              </form>
            </div>
          </div>
        </div>
      <% }); %>
    </div>
  </div>

  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
